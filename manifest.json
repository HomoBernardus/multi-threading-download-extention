{
    "manifest_version": 3,
    "name": "多线程下载管理器",
    "version": "1.0",
    "description": "Chrome浏览器的多线程下载扩展，提高下载速度",
    "permissions": [
      "downloads",
      "storage",
      "webRequest",
      "declarativeNetRequest",
      "tabs",
      "activeTab",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }